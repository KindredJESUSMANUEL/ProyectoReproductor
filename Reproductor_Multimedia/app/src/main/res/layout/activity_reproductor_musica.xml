<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victor.t3_multimedia.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_play_alm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="play_storage"
                    android:text="PLAY ALM" />

                <Button
                    android:id="@+id/button_play_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="play_app"
                    android:text="PLAY APP" />

                <Button
                    android:id="@+id/button_play_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="play_int"
                    android:text="PLAY INT" />

            </LinearLayout>

            <Button
                android:id="@+id/button_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="stop"
                android:text="STOP" />

            <Button
                android:id="@+id/button_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="pause"
                android:text="PAUSE" />

            <Button
                android:id="@+id/button_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="continuar"
                android:text="CONTINUE" />

            <LinearLayout
                android:id="@+id/linear_navegar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_atras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="retroceder"
                    android:text="&lt;&lt;" />

                <Button
                    android:id="@+id/button_alante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="avanzar"
                    android:text="&gt;&gt;" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
