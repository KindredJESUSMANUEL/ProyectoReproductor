<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="multimedia.reproductor_multimedia">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.INTERNET" />


    <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Microfono" android:screenOrientation="portrait"/>
        <activity android:name=".ReproductorMusica" android:screenOrientation="portrait"/>
        <activity android:name=".Galeria" android:screenOrientation="portrait"/>
        <activity android:name=".Camara" android:screenOrientation="portrait"/>
        <activity android:name=".Camara_de_fotos" android:screenOrientation="portrait"/>
        <activity android:name=".Grabadora_de_videos" android:screenOrientation="portrait"/>
        <activity android:name=".Visualizar_video" android:screenOrientation="portrait"/>
    </application>

</manifest>